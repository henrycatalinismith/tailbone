<?xml version='1.0' encoding='utf-8'?>
<widget id="app.tailbone" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>Tailbone</name>
    <description>
        Endless runner game featuring the gnarliest T-Rex of the KT extinction event. Play as one of the last surviving dinosaurs of the cretaceous period going for one final skate before it all comes to a fiery end.  Try to put down the best combo you can: it'll be 65 million years until the next skate session!
    </description>
    <author email="henry@henrysmith.org" href="http://henrysmith.org">
        Henry Smith
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="SplashScreenDelay" value="0" />
</widget>
